<h1 class="text-center mt-4">Articles</h1>
<div class="container">
  <% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center" class="shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by Oliver Allen santander
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article),class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <%= link_to 'View', article_path(article), class: "btn btn-outline-info" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-success" %>
          <%= link_to 'Delete', article_path(article), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>
          Create <%= time_ago_in_words(article.created_at) %>,
          Updated <%= time_ago_in_words(article.updated_at) %>
          </small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>